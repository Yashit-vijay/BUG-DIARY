<%- include('./partials/navbar.ejs')%>
<%- include('./partials/sidebar.ejs')%>

<section class="admin-overview">
    <div class="container">
        <div class="row">
            <div class="col-xl-10 col-sm-12 mt-4">
                <h3>CREATE NEW TICKET</h3>
                <div class="row mt-3 py-3">
                    <div class="col-6">
                        <form method="POST", action="/createticket/<%= project._id%>">
                        <h6>Title</h6>
                        <input
                            type="text"
                            name="title"
                            id="title"
                            placeholder="Name"
                            class="w-75 h-75 px-2 mt-2 border border-top-0 border-left-0 border-right-0"
                        />
                    </div>
                    <div class="col-6">
                        <h6>Description</h6>
                        <input
                            type="text"
                            name="description"
                            id="description"
                            placeholder="Description"
                            class="w-75 h-75 px-2 mt-2 border border-top-0 border-left-0 border-right-0"
                        />
                    </div>
                </div>
                <div class="row mt-3 py-3 pb-3">
                    <div class="col-6">
                        <h6>Assign Developer</h6>
                        <select name="developer" id="developer" class="border w-75 h-50 mt-2 pl-2" >
                            <option value="<%= project.developer%>"><%= project.developer%></option>
                            <option value="<%= project.developer2%>"><%= project.developer2%></option>
                        </select>
                    </div>
                    <div class="col-6">
                        <h6>Ticket Priority</h6>
                        <select name ="priority" id="priority" class="border w-75 h-50 mt-2 pl-2" >
                            <option value="Active">Active</option>
                            <option value="Test">Test</option>
                            <option value="Verified">Verified</option>
                            <option value="Closed">Closed</option>
                            <option value="Reopened">Reopened</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3 pt-3 pb-5 border-bottom">
                    <div class="col-6">
                        <h6>Ticket Status</h6>
                        <select name="status" id="status" class="border w-75 h-50 mt-2 pl-2" >
                            <option value="Catastrophic">Catastrophic</option>
                            <option value="Impaired functionality">Impaired functionality</option>
                            <option value="Failure of non-critical systems">Failure of non-critical systems</option>
                            <option value="Very Minor">Very Minor</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <h6>Ticket Type</h6>
                        <select name="type" id="type" class="border w-75 h-50 mt-2 pl-2" >
                            <option value="Functional Bug">Functional Bug</option>
                            <option value="Content Bug">Content Bug</option>
                            <option value="Visual Bug">Visual Bug</option>
                            <option value="Usability Suggestion">Usability Suggestion</option>

                        </select>
                    </div>
                </div>
                <div class="row mt-2 py-3">
                    <div class="col-6">
                        <a href="/mytickets">Back to List</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" id="submit" class="btn btn-primary createproject">CREATE TICKET</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>