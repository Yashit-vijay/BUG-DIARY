<%- include('./partials/navbar.ejs')%> <%- include('./partials/sidebar.ejs')%>

<section class="admin-overview">
    <div class="container">
        <div class="row">
            <div class="col-xl-10 col-sm-12 mt-4">
                <h3>CREATE NEW PROJECT</h3>
                <div class="row mt-3 py-3">
                    <div class="col-6">
                        <h6>Title</h6>
                        <form method="POST", action="/createproject">
                        <input
                            type="text"
                            name="title"
                            id="title"
                            placeholder="Name"
                            class="w-75 h-75 px-2 mt-2 border border-top-0 border-left-0 border-right-0"
                        />
                    </div>
                    <div class="col-6">
                        <h6>Project Description</h6>
                        <input
                            type="text"
                            name="description"
                            id="description"
                            placeholder="Description"
                            class="w-75 h-75 px-2 mt-2 border border-top-0 border-left-0 border-right-0"
                        />
                    </div>
                </div>
                <div class="row mt-4 py-3 pb-3">
                    <div class="col-6">
                        <h6>Assign Project Manager</h6>
                        <select name="manager" id="manager" class="border w-75 h-50 mt-2 pl-2">
                            <% if(currentUser.role == 'Admin'){%>
                                <% users.forEach(user => { %>
                                    <% if(user.role == 'Project Manager'){ %>
                                        <option value="<%= user.username%>"><%= user.username%></option>
                                    <% }%>
                                <% })%>
                            <% }else if(currentUser.role == 'Project Manager'){%>
                                <option value="<%= currentUser.username%>"><%= currentUser.username%></option>        
                            <% }%>
                        </select>
                    </div>
                    <div class="col-6">
                        <h6>Assign Developer</h6>
                        <select name="developer" id="developer" class="border w-75 h-50 mt-2 pl-2" >
                            <% users.forEach(user => { %>
                                <% if(user.role == 'Developer'){ %>
                                    <option value="<%= user.username%>"><%= user.username%></option>
                                <% }%>
                            <% })%>
                        </select>
                    </div>
                </div>
                <div class="row mt-3 py-3 pb-5 border-bottom">
                    <div class="col-6">
                        <h6>Assign Second Developer</h6>
                        <select name="developer2" id="developer" class="border w-75 h-50 mt-2 pl-2" >
                            <% users.forEach(user => { %>
                                <% if(user.role == 'Developer'){ %>
                                    <option value="<%= user.username%>"><%= user.username%></option>
                                <% }%>
                            <% })%>
                        </select>
                    </div>
                </div>
                <div class="row mt-2 py-3">
                    <div class="col-6">
                        <a href="/myprojects">Back to List</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" id="submit" class="btn btn-primary createproject">CREATE PROJECT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
